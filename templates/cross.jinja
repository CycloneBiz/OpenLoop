{% extends "base.html" %}

{% block content %}
<h3 class="text-dark mb-4">{{crossweb.title}}</h3>
<div class="row">
    {% for card in crossweb %}
    <div class="col-md-{{card.size}}">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="text-primary m-0 fw-bold">{{card.title}}</h6>
            </div>
            <div class="card-body">
                {% for element in card %}
                <{{element.tag}} class="{{element.atr}}" {{element.markers}}>
                    {{element.internal}}
                </{{element.tag}}>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}